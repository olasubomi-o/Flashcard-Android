<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:textSize="40sp"
        android:text="Who is the 44th President of The United States of America?"
        android:gravity = "center"
        android:background="@drawable/question_background"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/answer_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/answer_background"

        android:gravity="center"
        android:text="Bill Clinton"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/answer_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/answer_1"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Donald Trump"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/answer_3"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_alignTop="@+id/answer_2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-95dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Barrack Obama"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="350dp"
        android:layout_height="200dp"

        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:text="Barrack Obama"
        android:textSize="40sp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        />



    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/toggle_visibility"
        android:src="@drawable/ic_iconmonstr_eye_6"
        android:layout_marginTop="680dp"

        android:layout_marginLeft="180dp"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/toggle_visibility_no"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="680dp"

        android:layout_marginLeft="180dp"
        android:src="@drawable/ic_iconmonstr_eye_no"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/add_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_alignParentRight="true" />



</RelativeLayout>