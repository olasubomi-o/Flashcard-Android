    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@drawable/question_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Who is the 44th President of The United States of America?"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="350dp"
        android:layout_height="200dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#CDDC39"
        android:gravity="center"
        android:text="Barrack Obama"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/toggle_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="640dp"
        android:src="@drawable/ic_iconmonstr_eye_6"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/toggle_visibility_no"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="640dp"
        android:src="@drawable/ic_iconmonstr_eye_no"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/add_icon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/next_arrow"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="236dp"
        android:src="@drawable/ic_iconmonstr_arrow_28__1_"
        android:visibility="visible" />


